  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass', '~>2.0.2'	
end

gem 'jquery-rails'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'rspec-rails', '~> 2.7.0'
  gem 'factory_girl', '~> 2.0.0'
  gem 'factory_girl_rails', '~> 1.1.0'
end

group :test do
  gem 'capybara', '~> 1.1.1'
  gem 'shoulda', '~> 2.11.3'
  gem 'rb-inotify'
  gem 'libnotify'
  gem 'spork', '~> 0.9.0.rc9'
  gem 'guard-spork'
  gem 'guard-rspec'
end

