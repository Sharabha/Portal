%p#notice= notice
%p
  %b Zawody:
  = Competition.find(TeamMembership.find_by_team_id(@team.id).competition_id).name
%p
  %b leader:
  = User.find(@team.leader_id).email
%p
  %b Name:
  = @team.name
%b Zaproszenia
- for invitation in @invitations
  %p
    = user_name(User.find(invitation.user_id))
    |
    - if invitation.confirmed
      potwierdzone
    - else
      nie potwierdzone
    |
    \#{invitation.token}
= link_to 'Wyslij zaproszenie ', new_team_invitation_path(@team)
%br
  %b Cz≈Çonkowie
  - for team_member in @team.team_members
    %p
      = user_name(team_member)
  %hr
    = link_to 'Edit', edit_team_path(@team)
    |
    \#{link_to 'Back', teams_path}
