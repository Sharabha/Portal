%h2
  Edycja konta
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = render :partial => "errors"
  .clearfix
    = f.label :email
    .input= f.email_field :email
  .clearfix
    = f.label :first_name
    .input= f.text_field :first_name
  .clearfix
    = f.label :last_name
    .input= f.text_field :last_name
  .clearfix
    = f.label :nick
    .input= f.text_field :nick
  .clearfix
    = f.label :tshirt_size
    .input= f.text_field :tshirt_size
  .clearfix
    = f.label :password
    .input
      = f.password_field :password
      %span.help-block
        Pozostaw puste, jeśli nie chcesz zmieniać hasła.
  .clearfix
    = f.label :password_confirmation
    .input= f.password_field :password_confirmation
  .clearfix
    = f.label :current_password
    .input
      = f.password_field :current_password
      %span.help-block
        Potwierdź zmiany hasłem.
  .clearfix.actions= f.submit t(:update), :class => "btn primary"

%h3 Usuwanie konta
Kliknij #{link_to "tutaj", registration_path(resource_name), :confirm => "Jesteś pewien, że chcesz usunąć konto?", :method => :delete}, aby usunąć konto.
%br/
%br/
= link_to t(:back), :back

