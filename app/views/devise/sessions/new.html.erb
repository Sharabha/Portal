<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix"><%= f.label :email %>
  <div class="input"><%= f.email_field :email %></div></div>

  <div class="clearfix"><%= f.label :password %>
  <div class="input"><%= f.password_field :password %></div></div>
  <% if devise_mapping.rememberable? -%>
    <div class="clearfix center"><label><%= f.check_box :remember_me %>
    <span>Remember me</span></label></div>
  <% end -%>

  <div class="clearfix center"><%= f.submit "Sign in", :class => "btn primary" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
