- if controller_name != 'sessions'
  = link_to t(:sign_in_title), new_session_path(resource_name), :class => "btn secondary"
  
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t(:sign_up_title), new_registration_path(resource_name), :class => "btn secondary"
  
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t(:password_title), new_password_path(resource_name), :class => "btn secondary"
  
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn secondary"